.author-mark {
  position: relative;
  bottom: 0px;
  padding: 0px;
  margin: 0px;
  font-size: 10px;
  height: 60rpx;
  overflow: hidden; /*自动隐藏文字*/
  text-overflow: ellipsis; /*文字隐藏后添加省略号*/
  white-space: nowrap; /*强制不换行*/
  color: #69f;
  width: 300rpx;
}

.article .author-info text {
  display: block;
  float: left;
  padding-left: 10rpx;
}

.article .content text {
  display: block;
  font-size: 35rpx;
  color: #6a6a6a;
  line-height: 60rpx;
  margin-bottom: 40rpx;
  text-align: justify;
  overflow: hidden;
  word-wrap: break-word;
}

.article .content .em {
  font-style: italic;
}

.article .content .strong {
  font-weight: bold;
}

.article .content text.qoute {
  border-left: 2px solid #cde3f1;
  padding-left: 20rpx;
}

.article .content image {
  display: block;
  width: 100%;
  margin-bottom: 40rpx;
}

.article .discuss {
  margin: 40rpx;
  text-align: center;
}

.article .discuss navigator {
  font-size: 30rpx;
  background: #eee;
  color: #555;
  padding: 10rpx;
  border-radius: 4rpx;
}

.article .discuss navigator:active {
  background-color: #cde3f1;
}

.toolbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  border-top: 1px solid #ddd;
  background: #fff;
}

.toolbar .inner {
  padding: 0 20rpx;
}

.toolbar .item {
  position: relative;
  padding-top: 20rpx;
  text-align: center;
  width: 20%;
  display: inline-block;
}

.toolbar .item .tip {
  position: absolute;
  display: block;
  top: 20rpx;
  right: 50%;
  margin-right: -30rpx;
  background: #019dd6;
  color: #fff;
  width: 20rpx;
  height: 20rpx;
  border-radius: 20rpx;
}

.toolbar .item:active {
  background: #fafafa;
}

.toolbar .item image {
  width: 60rpx;
  height: 60rpx;
}
