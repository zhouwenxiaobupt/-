page {
  background: #fafafa;
}

.header-cover {
  position: relative;
  height: 500rpx;
  overflow: hidden;
}

.header-cover image {
  width: 100%;
}

.header-cover .mask {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.3);
}

.header-cover .desc {
  position: absolute;
  left: 0;
  bottom: 0;
  padding: 0 20rpx 60rpx 20rpx;
  font-size: 40rpx;
  color: #fff;
  z-index: 10;
}

.header-cover .cover-source {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  font-size: 30rpx;
  color: #fff;
}

.black-desc {
  padding: 50rpx;
  font-weight: bold;
}

/*article*/

.article {
  padding: 40rpx;
  margin-bottom: 20rpx;
  background: #fff;
}

.article .title {
  padding-bottom: 40rpx;
  font-size: 40rpx;
  font-weight: bold;
}

.article .author-info {
  overflow: hidden;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 35rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom: 20rpx;
}

.article .author-info .avatar {
  float: left;
  width: 60rpx;
  height: 60rpx;
  border-radius: 5rpx;
}

.article .author-info .author-mark {
  color: #6a6a6a;
}

